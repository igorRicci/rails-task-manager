<h1>To do list</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %></li>
    <%= link_to "Delete task",
      task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" }, class: "btn-del" %>
  <% end %>
</ul>

<%= link_to 'Add a new task', new_task_path %>
